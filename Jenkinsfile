pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                // Commands to build the application
                sh 'echo "Building the application..."'
            }
        }
        stage('Test') {
            steps {
                // Commands to test the application
                sh 'echo "Testing the application..."'
            }
        }
        stage('Deploy') {
            steps {
                // Commands to deploy the application
                sh 'echo "Deploying the application..."'
            }
        }
    }
}
